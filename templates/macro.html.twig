{% macro render_table(items) %}
    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Pr√©nom</th>
                <th>Date</th>
                <th>Heure</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.user.nom }}</td>
                    <td>{{ item.user.prenom}}</td>
                    <td>{{ item.date|date("d-m-Y") }}</td>
                    <td>{{ item.heure|date("H:i") }}</td>
                    <td>
                        <a href="{{ path('edit_booking', { 'id': item.id }) }}">
                            <button type="button">Modifier</button>
                        </a>
                        <a href="{{ path('delete_booking', { 'id': item.id }) }}">
                            <button type="button">Supprimer</button>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>    
    </table>
{% endmacro %}